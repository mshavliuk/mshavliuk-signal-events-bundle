{
    "name":        "mshavliuk/symfony-signal-handler",
    "type":        "library",
    "description": "Symfony handler service to handle process signals (kill, ctrl+c etc.)",
    "keywords":    ["symfony", "console", "pcntl", "cli"],
    "homepage":    "http://github.com/mshavliuk/symfony-signal-handler",
    "license":     "MIT",
    "support":     {
        "issues": "https://github.com/mshavliuk/symfony-signal-handler/issues"
    },
    "authors": [
        {
            "name":     "Mikhail Shavliuk",
            "email":    "mshavliuk@ya.ru"
        }
    ],
    "require": {
        "php": "~7.1",
        "ext-pcntl": "*",
        "symfony/console": "~2.3 || ~3.0 || ~4.0"
    },
    "autoload": {
        "psr-4": {
            "Mshavliuk\\SymfonySignalHandler": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^8.1",
        "symfony/process": "^4.2"
    },
    "scripts": {
        "test": "vendor/bin/phpunit tests"
    }
}
