{
    "name":        "mshavliuk/symfony-signal-events-bundle",
    "type":        "symfony-bundle",
    "description": "Symfony bundle to handle process signals (kill, ctrl+c etc.)",
    "keywords":    ["symfony", "console", "pcntl", "cli", "bundle"],
    "homepage":    "http://github.com/mshavliuk/symfony-signal-handler",
    "license":     "MIT",
    "support":     {
        "issues": "https://github.com/mshavliuk/symfony-signal-handler/issues"
    },
    "authors": [
        {
            "name":     "Mikhail Shavliuk",
            "email":    "mshavliuk@ya.ru"
        }
    ],
    "require": {
        "php": "~7.1",
        "ext-pcntl": "*",
        "symfony/event-dispatcher": "^4.4",
        "symfony/yaml": "^4.3"
    },
    "autoload": {
        "psr-4": {
            "Mshavliuk\\SignalEventsBundle\\": "src/"
        },
        "exclude-from-classmap": [
            "/Tests/",
            "/Command/"
        ]
    },
    "require-dev": {
        "roave/security-advisories": "dev-master",
        "phpunit/phpunit": "^8.1",
        "symfony/process": "^4.2",
        "symfony/console": "~2.3 || ~3.0 || ~4.0",
        "symfony/framework-bundle": "^4.2",
        "friendsofphp/php-cs-fixer": "^2.15@dev",
        "phpstan/phpstan": "^0.11.0@dev",
        "thecodingmachine/safe": "^0.1.15",
        "phpstan/phpstan-symfony": "^0.11.6",
        "phpstan/phpstan-phpunit": "^0.11.2"
    },
    "scripts": {
        "test": "vendor/bin/phpunit --configuration phpunit.xml.dist",
        "csfix": "vendor/bin/php-cs-fixer fix src/ bin/ --config=.php_cs.dist --verbose",
        "analyse": "vendor/bin/phpstan analyse src/ bin/ -c phpstan.neon --no-progress --level=7 -vvv"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
